{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es2020",
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

  },
  // "include": [
  //   "src", "public/serviceWorker.ts"
  // ],


}
